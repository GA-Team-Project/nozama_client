{{#each items as |item|}}
  {{log item}}


 <div class="item-box">
    <div class="item-image">Image location</div>
    <h1 data-id="{{item._id}}" class="my-item"> <small>{{item.name}}</small></h1>
    <ul data-id="{{item._id}}" data-price="{{item.price}}">
        <li><b>Price:</b> ${{item.price}}</li>
        <li><b>Description:</b> {{item.description}}</li>
        <li><b>Weight:</b> {{item.weight}}g</li>
        <li><b>Dimensions:</b> {{item.dimensions}}</li>
        <li> <button id="addToCart">Add to cart</button></li>
    </ul>
   
  </div>

{{/each}}
